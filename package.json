{
    "name": "sim8085",
    "description": "Development environment for Intel 8085 microprocessor.",
    "private": true,
    "version": "0.1.11",
    "license": "BSD-3-Clause",
    "author": "Debjit Biswas",
    "repository": {
        "type": "git",
        "url": "https://github.com/debjitbis08/sim8085"
    },
    "dependencies": {},
    "devDependencies": {
        "@wasm-tool/wasm-pack-plugin": "^1.3.3",
        "@webpack-cli/serve": "^1.3.1",
        "autoprefixer": "^6.3.6",
        "bootstrap-sass": "^3.3.6",
        "conventional-changelog-cli": "^1.3.9",
        "copy-webpack-plugin": "^5.0.3",
        "css-loader": "^0.28.9",
        "cypress": "^1.4.2",
        "elm": "^0.19.1-5",
        "elm-format": "^0.8.5",
        "elm-hot-loader": "^0.5.4",
        "elm-hot-webpack-loader": "^1.1.8",
        "elm-webpack-loader": "^7.0.1",
        "file-loader": "^6.2.0",
        "html-webpack-plugin": "^4.5.2",
        "http-server": "^0.11.1",
        "husky": "^0.14.3",
        "jquery": "^3.6.0",
        "mini-css-extract-plugin": "^1.4.0",
        "node-sass": "^4.14.1",
        "npm-run-all": "^4.1.2",
        "pegjs": "~0.10.0",
        "postcss-loader": "^4.2.0",
        "rimraf": "^3.0.0",
        "sass-loader": "^6.0.6",
        "style-loader": "^2.0.0",
        "url-loader": "^0.6.2",
        "validate-commit": "^3.4.0",
        "webpack": "^5.30.0",
        "webpack-cli": "^4.6.0",
        "webpack-dev-server": "^3.11.2",
        "webpack-merge": "^5.7.3"
    },
    "scripts": {
        "commitmsg": "validate-commit-msg",
        "start": "webpack serve --hot --inline --content-base src/",
        "build": "rimraf dist && webpack",
        "webpack": "webpack",
        "watch": "webpack --watch",
        "make-dist": "mkdir dist",
        "build-assembler": "pegjs --format commonjs -o src/core/8085-assembler.js src/core/8085.pegjs",
        "build-emulator": "emcc src/core/8085.c -o src/core/8085.js --pre-js src/core/emcc-env.js --post-js src/core/emcc-export.js -Oz --closure 0 --memory-init-file 0 -s EXPORTED_FUNCTIONS=\"['_Init8085','_ExecuteProgram', '_Emulate8085Op', '_LoadProgram', '_ExecuteProgramUntil']\" -s EXTRA_EXPORTED_RUNTIME_METHODS=\"['ccall', 'cwrap', 'getValue', 'setValue']\" -s NO_EXIT_RUNTIME=1 -s NO_FILESYSTEM=1 -s MODULARIZE=1 -s WASM=0",
        "cypress:open": "cypress open",
        "cypress:run": "cypress run --record false",
        "run-test-server": "http-server dist/ -p 3000",
        "test": "yarn build && run-p --race run-test-server cypress:run",
        "version": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md"
    }
}
